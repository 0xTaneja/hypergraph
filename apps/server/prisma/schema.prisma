generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SpaceEvent {
  id        String   @id
  event     String
  state     String
  counter   Int
  space     Space    @relation(fields: [spaceId], references: [id])
  spaceId   String
  createdAt DateTime @default(now())

  @@unique([spaceId, counter])
}

model Space {
  id      String       @id
  events  SpaceEvent[]
  members Account[]
}

model Account {
  id     String  @id
  spaces Space[]
}
