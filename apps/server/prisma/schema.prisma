// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SpaceEvent {
  id      String @id
  event   String
  space   Space  @relation(fields: [spaceId], references: [id])
  spaceId String
}

model Space {
  id      String       @id
  events  SpaceEvent[]
  members Account[]
}

model Account {
  id     String  @id
  spaces Space[]
}
